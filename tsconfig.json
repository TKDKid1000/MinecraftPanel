{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2015",
        "rootDir": "./src",
        "outDir": "./build",
        "typeRoots": ["./node_modules/@types"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["./src", "./node_modules/@types/"],
    "exclude": ["./node_modules"]
}
